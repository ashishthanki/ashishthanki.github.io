    api_password &lt;span class=&quot;token operator&quot;&gt;=&lt;/span&gt; get_parameter&lt;span class=&quot;token punctuation&quot;&gt;(&lt;/span&gt;&lt;span class=&quot;token string&quot;&gt;&amp;quot;EXAMPLE_API_PASSWORD&amp;quot;&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;)&lt;/span&gt;

